<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:gravity="center"
    android:orientation="horizontal"
    android:layout_marginTop="2dp"
    android:layout_height="25dp">

    <RelativeLayout
        android:id="@+id/saoyisao"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/erweima"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/a_s"/>

        <TextView
            android:id="@+id/tv_erweima"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#ffffff"
            android:text="扫一扫"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/edit_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:background="@drawable/dot"
        >

        <ImageView
            android:layout_width="25dp"
            android:layout_height="24dp"
            android:src="@drawable/sou"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            />
        <TextView
            android:id="@+id/tv_sousuo"
            android:layout_width="260dp"
            android:layout_height="30dp"
            android:text=""
            android:hint="查询"
            android:gravity="center_vertical"
            android:paddingLeft="50dp"
            android:scrollbars="none"
            android:background="@null"/>
            <ImageView
                android:id="@+id/iv1_sousuo"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/dog"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                />
 </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/iv_xx"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/a9x" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_xx"
            android:text="消息" />


    </RelativeLayout>


</LinearLayout>
