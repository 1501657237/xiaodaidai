<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/android_img"
            app:actualImageScaleType="focusCrop"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:failureImage="@drawable/icon_failure"
            app:failureImageScaleType="centerInside"
            app:roundBottomLeft="true"
            app:roundBottomRight="true"
            app:retryImage="@drawable/icon_retry"
            app:retryImageScaleType="centerCrop"
            app:fadeDuration="1000"

            app:roundTopLeft="true"
            app:roundTopRight="true"
            app:roundedCornerRadius="8dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/android_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="123" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/android_title"
                android:layout_marginTop="20dp">
                <TextView
                    android:id="@+id/android_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="123" />

                <TextView
                    android:id="@+id/android_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="123" />
            </RelativeLayout>

        </RelativeLayout>
    </LinearLayout>
<View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="#666666"></View>
</LinearLayout>